atividade 4-COMEÇA COM A

<form action="if.php" method-"GET">
    Palavra <input type="text" name="n">
    <button type="submit">Enviar</button>
<form>

<?php
//n = nome
print"<br>";
print"<br>";
$n = $_GET['n'];
if (substr($n, 0, 1) === "A") {
print "o mome começa com A";
}elseif (substr($n, 0, 1) !== "A") {
    print "o nome nao começa com A";
}


