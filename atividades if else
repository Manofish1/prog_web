//Formulário comparação

<form action="if.php" method-"GET">
    A <input type="number" name="a">
    B <input type="number" name="b"> 
    <button type="submit">Enviar</button>
<form>

<?php
print"<br>";
print"<br>";


$a = $_GET['a'];
$b = $_GET['b'];
if ($a > $b) {
    print "| $a e maior que $b |";
}elseif($b > $a){
    print "| $b e maior que $a |";
}else{
    print "| $a e igual a $b |";
}

