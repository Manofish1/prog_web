//Atividade 1 - Número positivo ou negativo
//Escreva um programa em PHP que receba um número e verifique se ele é positivo, negativo ou zero.

<form action="if.php" method-"GET">
    A <input type="number" name="a">
    <button type="submit">Enviar</button>
<form>


<?php
//Formulário comparação
print"<br>";
print"<br>";

$a = $_GET['a'];
$b = 0;

if ($a > $b ) {
    print "| $a é positivo |";
}elseif($a < $b){
    print "| $a é negativo |";
}elseif($a == $b){
    print "| $a é zero |";
}

